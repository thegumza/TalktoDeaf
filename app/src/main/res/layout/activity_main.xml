<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:background="#E0E0E0"
    android:layout_weight="1" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:text="ฝึกท่าทาง"
            android:textSize="25dp"
            android:singleLine="true"
            android:drawableTop="@drawable/ic_accessibility_grey600_36dp"
            android:drawablePadding="5dp"
            flatui:fl_theme="@array/orange"
            flatui:fl_textAppearance="fl_light"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="ttf"/>

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="เกม"
            android:textSize="25dp"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:singleLine="true"
            android:drawableTop="@drawable/ic_games_grey600_36dp"
            android:drawablePadding="5dp"
            flatui:fl_theme="@array/blossom"
            flatui:fl_textAppearance="fl_light"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="ttf"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_speak"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="ฝึกพูด"
            android:textSize="25dp"
            android:singleLine="true"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:drawableTop="@drawable/ic_tag_faces_grey600_36dp"
            android:drawablePadding="5dp"
            flatui:fl_textAppearance="fl_light"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_theme="@array/sky"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="ttf"/>

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/btn_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:text="ข้อมูล"
            android:textSize="25dp"
            android:singleLine="true"
            android:drawableTop="@drawable/ic_info_outline_grey600_36dp"
            android:drawablePadding="5dp"
            flatui:fl_theme="@array/sand"
            flatui:fl_textAppearance="fl_light"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="ttf"/>
    </LinearLayout>
</LinearLayout>
