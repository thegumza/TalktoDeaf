<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e898bf"
    >


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/topscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:padding="20dp"
                android:text=""
                android:textSize="40dp"
                android:layout_margin="5dip"
                android:drawableLeft="@drawable/ic_poll_white_36dp"
                android:drawablePadding="5dp"
                flatui:fl_size="30dip"
                android:orientation="vertical"
                flatui:fl_fontFamily="Waffle"
                flatui:fl_fontWeight="regular"
                flatui:fl_fontExtension="otf"/>
        <VideoView
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:id="@+id/videoView"
            android:layout_margin="5dp"
            android:layout_gravity="center" />

        <RadioGroup
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text"
            android:id="@+id/myRadioGroup"
            android:checkedButton="@+id/sound" >

            <com.cengalabs.flatui.views.FlatRadioButton
                android:id="@+id/firstchoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#0000"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:gravity="left"
                android:layout_margin="5dip"
                flatui:fl_size="30dp"
                flatui:fl_theme="@array/snow"
                android:orientation="vertical"
                flatui:fl_fontFamily="Waffle"
                flatui:fl_fontWeight="regular"
                flatui:fl_fontExtension="otf"
                flatui:fl_dotMargin="1dp"/>

            <com.cengalabs.flatui.views.FlatRadioButton
                android:id="@+id/secondchoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#0000"
                android:text=""
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="5dip"
                android:textSize="35dp"
                flatui:fl_size="30dp"
                flatui:fl_theme="@array/snow"
                android:orientation="vertical"
                flatui:fl_fontFamily="Waffle"
                flatui:fl_fontWeight="regular"
                flatui:fl_fontExtension="otf"
                flatui:fl_dotMargin="1dp"/>
        </RadioGroup>

    </LinearLayout>




</LinearLayout>
