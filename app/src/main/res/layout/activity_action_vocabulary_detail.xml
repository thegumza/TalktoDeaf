<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:flatui="http://schemas.android.com/apk/res-auto"
xmlns:wheel="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="center"
tools:context="project.se.action.ActionVocabularyDetail">




<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <com.cengalabs.flatui.views.FlatTextView
        android:id="@+id/voc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40dp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"
        flatui:fl_fontFamily="Waffle"
        flatui:fl_fontWeight="regular"
        flatui:fl_fontExtension="otf"
        flatui:fl_textColor="fl_darker" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:padding="10dp" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <VideoView
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:id="@+id/videoView"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center">
                    <com.pnikosis.materialishprogress.ProgressWheel
                        android:id="@+id/progress_wheel"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        wheel:matProg_barColor="#5588FF"
                        wheel:matProg_progressIndeterminate="true" />
                    </LinearLayout>

            </FrameLayout>
            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/voc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#0000"
                android:textSize="25dp"
                android:text=""
                android:layout_margin="5dip"
                flatui:fl_size="30dip"
                flatui:fl_theme="@array/dark"
                android:orientation="vertical"
                flatui:fl_fontFamily="Waffle"
                flatui:fl_fontWeight="regular"
                flatui:fl_fontExtension="otf"/>

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#0000"
                android:textSize="25dp"
                android:text=""
                android:layout_margin="5dip"
                flatui:fl_size="30dip"
                flatui:fl_theme="@array/dark"
                android:orientation="vertical"
                flatui:fl_fontFamily="Waffle"
                flatui:fl_fontWeight="regular"
                flatui:fl_fontExtension="otf"/>

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#0000"
                android:textSize="25dp"
                android:text=""
                android:layout_margin="5dip"
                flatui:fl_size="30dip"
                flatui:fl_theme="@array/dark"
                android:orientation="vertical"
                flatui:fl_fontFamily="Waffle"
                flatui:fl_fontWeight="regular"
                flatui:fl_fontExtension="otf"/>
            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/voc_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#0000"
                android:textSize="25dp"
                android:text=""
                android:layout_margin="5dip"
                flatui:fl_size="30dip"
                flatui:fl_theme="@array/dark"
                android:orientation="vertical"
                flatui:fl_fontFamily="Waffle"
                flatui:fl_fontWeight="regular"
                flatui:fl_fontExtension="otf"/>

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/voc_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#0000"
                android:textSize="25dp"
                android:text=""
                android:layout_margin="5dip"
                flatui:fl_size="30dip"
                flatui:fl_theme="@array/dark"
                android:orientation="vertical"
                flatui:fl_fontFamily="Waffle"
                flatui:fl_fontWeight="regular"
                flatui:fl_fontExtension="otf"/>



        </LinearLayout>


    </LinearLayout>
</LinearLayout>




</LinearLayout>
